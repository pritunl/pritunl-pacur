targets=(
    "archlinux"
    "amazonlinux-2"
    "centos-7"
    "debian-jessie"
    "debian-stretch"
    "fedora-28"
    "fedora-29"
    "oraclelinux-7"
    "ubuntu-xenial"
    "ubuntu-bionic"
    "ubuntu-disco"
)
pkgname="pritunl-client"
pkgver="1.0.1865.25"
pkgrel="1"
pkgdesc="Pritunl OpenVPN Client"
pkgdesclong=(
    "Free and open source cross platform OpenVPN client"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/pritunl/pritunl-client"
depends:pacman=(
    "python2"
    "python2-setuptools"
    "python2-requests"
    "net-tools"
    "iproute2"
    "openvpn"
)
depends:fedora=(
    "python2"
    "python2-setuptools"
    "net-tools"
    "openvpn"
)
depends:yum=(
    "python2"
    "python-setuptools"
    "net-tools"
    "openvpn"
)
depends:apt=(
    "python"
    "net-tools"
    "iptables"
    "openvpn"
    "resolvconf"
)
makedepends:pacman=(
    "python2"
    "python2-setuptools"
    "python2-requests"
    "net-tools"
    "iproute2"
    "openvpn"
    "python2-distribute"
)
makedepends:fedora=(
    "python2-setuptools"
    "python2-virtualenv"
)
makedepends:yum=(
    "python-setuptools"
    "python-virtualenv"
)
makedepends:apt=(
    "python-dev"
    "python-setuptools"
    "python-virtualenv"
)
provides=("${pkgname}")
conflicts=(
    "pritunl-client"
    "pritunl-client-gtk"
)
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "a777ac4c92e8faf8f3782c0628be791f5827d3422275a6c2e79287a63783d955"
)
backup=(
    "var/log/pritunl-client.log"
    "var/log/pritunl-client.log.1"
)

build:pacman() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    python2 setup.py build
}
build:fedora-29() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    python2 setup.py build
    python2 /usr/lib/python2.7/site-packages/virtualenv.py /usr/lib/pritunl-client
    /usr/lib/pritunl-client/bin/pip install -r requirements.txt
}
build:fedora() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    python2 setup.py build
    virtualenv-2 /usr/lib/pritunl-client
    /usr/lib/pritunl-client/bin/pip install -r requirements.txt
}
build:yum() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    python setup.py build
    virtualenv /usr/lib/pritunl-client
    /usr/lib/pritunl-client/bin/pip install -r requirements.txt
}
build:apt() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    python setup.py build
    virtualenv /usr/lib/pritunl-client
    /usr/lib/pritunl-client/bin/pip install -r requirements.txt
}

package:pacman() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    mkdir -p "${pkgdir}/etc/pritunl_client"
    python2 setup.py install --root="${pkgdir}" --prefix=/usr --no-upstart --no-gtk
}
package:yum() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    mkdir -p "${pkgdir}/usr/lib/pritunl-client"
    /usr/lib/pritunl-client/bin/python2 setup.py install --root="${pkgdir}" --no-upstart --no-gtk
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/pritunl-client/bin/pritunl-client ${pkgdir}/usr/bin/pritunl-client
    cp -r /usr/lib/pritunl-client/* ${pkgdir}/usr/lib/pritunl-client/
}
package:apt() {
    cd "${srcdir}/pritunl-client-${pkgver}"
    mkdir -p "${pkgdir}/usr/lib/pritunl-client"
    /usr/lib/pritunl-client/bin/python setup.py install --root="${pkgdir}" --no-upstart --no-gtk
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/pritunl-client/bin/pritunl-client ${pkgdir}/usr/bin/pritunl-client
    cp -r /usr/lib/pritunl-client/* ${pkgdir}/usr/lib/pritunl-client/
}

postinst() {
    systemctl daemon-reload &> /dev/null || true
    systemctl restart pritunl-client &> /dev/null || true
    systemctl enable pritunl-client &> /dev/null || true
    service pritunl-client restart &> /dev/null || true
    restart pritunl-client &> /dev/null || true
}

prerm() {
    systemctl daemon-reload &> /dev/null || true
    systemctl stop pritunl-client &> /dev/null || true
    systemctl disable pritunl-client &> /dev/null || true
    service pritunl-client stop &> /dev/null || true
}

postrm() {
    rm -rf /etc/pritunl_client
}
