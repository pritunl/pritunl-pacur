targets=(
    "archlinux"
    "almalinux-8"
    "almalinux-9"
    "amazonlinux-2"
    "amazonlinux-2023"
    "debian-buster"
    "debian-bullseye"
    "debian-bookworm"
    "fedora-39"
    "fedora-40"
    "almalinux-8"
    "almalinux-9"
    "oraclelinux-7"
    "oraclelinux-8"
    "oraclelinux-9"
    "ubuntu-xenial"
    "ubuntu-bionic"
    "ubuntu-focal"
    "ubuntu-jammy"
    "ubuntu-mactic"
    "ubuntu-noble"
)
pkgname="pritunl-ssh-host"
pkgver="1.0.2435.24"
pkgrel="1"
pkgdesc="Pritunl Zero SSH Host Client"
pkgdesclong=(
    "Pritunl Zero SSH host client for Linux"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/pritunl/pritunl-zero-client"
depends:pacman=(
    "python"
)
depends:fedora=(
    "python3"
)
depends:yum=(
    "python3"
)
depends:apt=(
    "python3"
)
makedepends:pacman=(
    "python"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/refs/tags/${pkgver}.tar.gz"
    "${pkgname}"
)
hashsums=(
    "defbdccd91da2dc953e6ad69e2226668741c39e0d6cf728489673d9cf02e66bb"
    "e3013a687a20303a3dae118a526f26b3e3aecd0f054f5256e22d150c0418ca27"
)

package:pacman() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"

    mkdir -p ${pkgdir}/etc/cron.d
    cp ${srcdir}/${pkgname} ${pkgdir}/etc/cron.d/${pkgname}

    mkdir -p ${pkgdir}/usr/bin
    sed -i -e 's|#!/usr/bin/env python|#!/usr/bin/env python2|g' ./ssh_host_client.py
    cp ./ssh_host_client.py ${pkgdir}/usr/bin/${pkgname}
}
package:fedora() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"

    mkdir -p ${pkgdir}/etc/cron.d
    cp ${srcdir}/${pkgname} ${pkgdir}/etc/cron.d/${pkgname}

    mkdir -p ${pkgdir}/usr/bin
    sed -i -e 's|#!/usr/bin/env python|#!/usr/bin/env python2|g' ./ssh_host_client.py
    cp ./ssh_host_client.py ${pkgdir}/usr/bin/${pkgname}
}
package:yum() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"

    mkdir -p ${pkgdir}/etc/cron.d
    cp ${srcdir}/${pkgname} ${pkgdir}/etc/cron.d/${pkgname}

    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_host_client.py ${pkgdir}/usr/bin/${pkgname}
}
package:apt() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"

    mkdir -p ${pkgdir}/etc/cron.d
    cp ${srcdir}/${pkgname} ${pkgdir}/etc/cron.d/${pkgname}

    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_host_client.py ${pkgdir}/usr/bin/${pkgname}
}
