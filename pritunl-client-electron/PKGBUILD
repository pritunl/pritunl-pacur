    cd "${srcdir}/${pkgname}-${pkgver}"

    mkdir -p ${pkgdir}/usr/share/applications
    cp resources_linux/pritunl-client-electron.desktop ${pkgdir}/usr/share/applications/pritunl-client-electron.desktop

