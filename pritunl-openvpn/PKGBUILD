pkgver="2.6.12"
pkgrel="1"
pkgdesc="A full-featured SSL VPN solution"
pkgdesclong=(
    "An easy-to-use, robust and highly configurable VPN"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
