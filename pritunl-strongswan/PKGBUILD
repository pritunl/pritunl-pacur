targets=(
    "archlinux"
    "amazonlinux-2"
    "amazonlinux-2023"
    "debian-buster"
    "debian-bullseye"
    "debian-bookworm"
    "almalinux-8"
    "almalinux-9"
    "oraclelinux-7"
    "oraclelinux-8"
    "oraclelinux-9"
    "ubuntu-bionic"
    "ubuntu-focal"
    "ubuntu-jammy"
    "ubuntu-noble"
)
pkgname="pritunl-strongswan"
pkgver="5.9.14"
pkgrel="1"
pkgdesc="Open Source IPsec Implementation"
pkgdesclong=(
    "StrongSwan is an open source IPsec-based VPN solution"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("GPL")
section="utils"
priority="optional"
url="https://download.strongswan.org"
depends:pacman=(
    "gmp"
    "net-tools"
    "python3"
    "openssl"
    "sqlite"
    "libcap"
    "pam"
)
depends:yum=(
    "gmp"
    "net-tools"
    "python3"
    "openssl"
    "sqlite"
    "libcap"
    "pam"
)
depends:apt=(
    "net-tools"
    "python3"
    "openssl"
    "sqlite3"
    "libcap2"
)

makedepends:pacman=(
    "curl"
    "gmp"
    "iproute2"
    "openssl"
    "sqlite"
    "libcap"
    "pam"
    "python-setuptools"
)
makedepends:yum=(
    "glib2-devel"
    "gmp-devel"
    "libcurl-devel"
    "openldap-devel"
    "openssl-devel"
    "sqlite-devel"
    "gettext-devel"
    "libxml2-devel"
    "pam-devel"
    "libgcrypt-devel"
    "iptables-devel"
    "libcap-devel"
    "net-tools"
    "python3-devel"
    "python3-setuptools"
)
makedepends:apt=(
    "libglib2.0-dev"
    "libgmp-dev"
    "libcurl4-openssl-dev"
    "libldap2-dev"
    "libssl-dev"
    "libsqlite3-dev"
    "gettext"
    "libxml2-dev"
    "libpam0g-dev"
    "libgcrypt20-dev"
    "libip4tc-dev"
    "libcap-dev"
    "libtss2-dev"
    "net-tools"
    "python3-dev"
    "python3-setuptools"
)
provides=(
    "${pkgname}"
    "strongswan"
)
conflicts=(
    "${pkgname}"
    "strongswan"
    "openswan"
    "ipsec-tools"
)
sources=(
    "${url}/strongswan-${pkgver}.tar.gz"
)
hashsums=(
    "7bef87faf92ad5ffa5342a90c326223ccf64864df8b4ee3a506f325d7f833c9e"
)

build() {
    cd "${srcdir}/strongswan-${pkgver}"
    ./configure --prefix=/usr \
        --sbindir=/usr/bin \
        --sysconfdir=/etc \
        --libexecdir=/usr/lib \
        --with-ipsecdir=/usr/lib/strongswan \
        --with-nm-ca-dir=/etc/ssl/certs \
        --with-piddir=/etc/ipsec.d/run \
        --enable-openssl \
        --enable-unity \
        --enable-ctr \
        --enable-ccm \
        --enable-gcm \
        --enable-chapoly \
        --enable-md4 \
        --enable-gcrypt \
        --enable-newhope \
        --enable-xauth-eap \
        --enable-xauth-pam \
        --enable-xauth-noauth \
        --enable-eap-identity \
        --enable-eap-md5 \
        --enable-eap-gtc \
        --enable-eap-tls \
        --enable-eap-ttls \
        --enable-eap-peap \
        --enable-eap-mschapv2 \
        --enable-eap-tnc \
        --enable-eap-sim \
        --enable-eap-sim-file \
        --enable-eap-aka \
        --enable-eap-aka-3gpp \
        --enable-eap-aka-3gpp2 \
        --enable-eap-dynamic \
        --enable-eap-radius \
        --enable-ext-auth \
        --enable-ipseckey \
        --enable-pkcs11 \
        --enable-farp \
        --enable-dhcp \
        --enable-ha \
        --enable-sql \
        --enable-sqlite \
        --enable-curl \
        --enable-cmd \
        --enable-acert \
        --enable-vici \
        --enable-swanctl \
        --enable-duplicheck \
        --enable-aesni \
        --enable-python-eggs \
        --enable-mgf1 \
        --enable-bliss \
        --enable-ntru \
        --disable-mysql \
        --disable-ldap \
        --enable-kernel-libipsec \
        --with-capabilities=libcap
    make
}

package() {
    cd "${srcdir}/strongswan-${pkgver}"
    make DESTDIR=${pkgdir} install
    mkdir -p "${pkgdir}/etc/ipsec.d/run"
    touch "${pkgdir}/etc/ipsec.d/run/ipsec"
}
