targets=(
    "archlinux"
    "amazonlinux-1"
    "amazonlinux-2"
    "centos-7"
    "debian-jessie"
    "debian-stretch"
    "fedora-27"
    "fedora-28"
    "oraclelinux-7"
    "ubuntu-trusty"
    "ubuntu-xenial"
    "ubuntu-artful"
    "ubuntu-bionic"
)
pkgname="pritunl-ssh"
pkgver="1.0.769.95"
pkgrel="1"
pkgdesc="Pritunl Zero SSH Client"
pkgdesclong=(
    "Pritunl Zero SSH client for Linux"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/pritunl/pritunl-zero-client"
depends:pacman=(
    "python2"
)
depends:yum=(
    "python"
)
depends:apt=(
    "python"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "ac35870af947c37f1a3430056af89091ca39741e6de9ce30b5a6e231667c262d"
)

package:pacman() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    sed -i -e 's|#!/usr/bin/env python|#!/usr/bin/env python2|g' ./ssh_client.py
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:yum() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:apt() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
