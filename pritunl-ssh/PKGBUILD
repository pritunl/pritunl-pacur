    "oraclelinux-9"
    "ubuntu-bionic"
    "ubuntu-focal"
    "ubuntu-jammy"
    "ubuntu-noble"
    "ubuntu-oracular"
)
pkgname="pritunl-ssh"
pkgver="1.0.3231.6"
pkgrel="1"
pkgdesc="Pritunl Zero SSH Client"
pkgdesclong=(
    "Pritunl Zero SSH client for Linux"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/pritunl/pritunl-zero-client"
depends:pacman=(
    "python"
)
depends:fedora=(
    "python3"
)
depends:yum=(
    "python3"
)
depends:apt=(
    "python3"
)
makedepends:pacman=(
    "python"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "https://codeload.github.com/pritunl/pritunl-zero-client/tar.gz/refs/tags/${pkgver}"
)
hashsums=(
    "32960f54a2ca9ac22f2b2722e58b0aa33a79e5ce4be6d40c63335da435987daf"
)

package:pacman() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:fedora() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:yum() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:apt() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
