targets=(
    "archlinux"
    "amazonlinux-2"
    "centos-7"
    "debian-stretch"
    "debian-buster"
    "debian-bullseye"
    "fedora-33"
    "fedora-34"
    "oraclelinux-7"
    "oraclelinux-8"
    "ubuntu-xenial"
    "ubuntu-bionic"
    "ubuntu-focal"
    "ubuntu-hirsute"
)
pkgname="pritunl-ssh"
pkgver="1.2.3128.59"
pkgrel="1"
pkgdesc="Pritunl Zero SSH Client"
pkgdesclong=(
    "Pritunl Zero SSH client for Linux"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/pritunl/pritunl-zero-client"
depends:pacman=(
    "python"
)
depends:fedora=(
    "python3"
)
depends:yum=(
    "python3"
)
depends:apt=(
    "python3"
)
makedepends:pacman=(
    "python"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/refs/tags/${pkgver}.tar.gz"
)
hashsums=(
    "90463ea996b8f07f2a0bedf371fe234d54fa751772e35996870a1555d4d1e43f"
)

package:pacman() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:fedora() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:yum() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
package:apt() {
    cd "${srcdir}/pritunl-zero-client-${pkgver}"
    mkdir -p ${pkgdir}/usr/bin
    cp ./ssh_client.py ${pkgdir}/usr/bin/pritunl-ssh
}
