targets=(
    "archlinux"
    "amazonlinux-2"
    "centos-7"
    "debian-jessie"
    "debian-stretch"
    "ubuntu-trusty"
    "ubuntu-xenial"
    "ubuntu-artful"
    "ubuntu-bionic"
)
pkgname="pritunl"
pkgver="1.28.1583.74"
pkgrel="1"
pkgdesc="Enterprise VPN Server"
pkgdesclong=(
    "Enterprise distributed vpn server. Documentation and more information"
    "can be found at pritunl.com"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="all"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/${pkgname}/${pkgname}"
depends:pacman=(
    "pritunl-ndppd"
    "python2"
    "net-tools"
    "iproute2"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
    "psmisc"
)
depends:yum=(
    "pritunl-ndppd"
    "python2"
    "net-tools"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
    "psmisc"
)
depends:apt=(
    "pritunl-ndppd"
    "python"
    "net-tools"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
    "psmisc"
)
makedepends:pacman=(
    "python2"
    "net-tools"
    "iproute2"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
    "gcc"
    "python2-setuptools"
    "python2-virtualenv"
    "python2-cryptography"
    "openssl"
    "libffi"
)
makedepends:yum=(
    "gcc"
    "python-setuptools"
    "python-virtualenv"
    "openssl-devel"
    "libffi-devel"
)
makedepends:apt=(
    "gcc"
    "python-dev"
    "python-setuptools"
    "python-virtualenv"
    "libssl-dev"
    "libffi-dev"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "8dcc42a693de6224939aad9acfd6f7d05690f98affa7075b32155063f5ebdf77"
)
backup=(
    "etc/${pkgname}.conf"
    "var/log/${pkgname}.log"
    "var/log/${pkgname}.log.1"
)

build:amazonlinux-2() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -U pip
    /usr/lib/${pkgname}/bin/pip install -U packaging
    /usr/lib/${pkgname}/bin/pip install -U six
    /usr/lib/${pkgname}/bin/pip install -U setuptools
    /usr/lib/${pkgname}/bin/pip install -U setuptools_scm
    /usr/lib/${pkgname}/bin/python setup.py build
    sed -i 's/jinja2.*/jinja2==2.8.1/g' requirements.txt
    /usr/lib/${pkgname}/bin/pip install -U -r requirements.txt
    git config --global http.https://gopkg.in.followRedirects true
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-web
}
build:centos-7() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -U pip
    /usr/lib/${pkgname}/bin/pip install -U packaging
    /usr/lib/${pkgname}/bin/pip install -U six
    /usr/lib/${pkgname}/bin/pip install -U setuptools
    /usr/lib/${pkgname}/bin/pip install -U setuptools_scm
    /usr/lib/${pkgname}/bin/python setup.py build
    sed -i 's/jinja2.*/jinja2==2.8.1/g' requirements.txt
    /usr/lib/${pkgname}/bin/pip install -U -r requirements.txt
    git config --global http.https://gopkg.in.followRedirects true
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-web
}
build:pacman() {
    tee -a /etc/pacman.conf << EOF
        [pritunl]
        Server = https://repo.pritunl.com/stable/pacman
    EOF

    pacman-key --keyserver hkp://keyserver.ubuntu.com -r 7568D9BB55FF9E5287D586017AE645C0CF8E292A
    pacman-key --lsign-key 7568D9BB55FF9E5287D586017AE645C0CF8E292A
    pacman -Sy
    pacman -S --noconfirm pritunl-ndppd

    cd "${srcdir}/${pkgname}-${pkgver}"
    virtualenv2 /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -U pip
    /usr/lib/${pkgname}/bin/pip install -U packaging
    /usr/lib/${pkgname}/bin/pip install -U six
    /usr/lib/${pkgname}/bin/pip install -U setuptools
    /usr/lib/${pkgname}/bin/pip install -U setuptools_scm
    /usr/lib/${pkgname}/bin/python setup.py build
    /usr/lib/${pkgname}/bin/pip install -U -r requirements.txt
    git config --global http.https://gopkg.in.followRedirects true
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-web
}
