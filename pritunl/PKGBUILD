targets=(
    "!centos-6"
    "!fedora-21"
    "!fedora-22"
    "archlinux"
    "centos"
    "debian"
    "fedora"
    "ubuntu"
)
pkgname="pritunl"
pkgver="1.14.845.99"
pkgrel="1"
pkgdesc="Enterprise VPN Server"
pkgdesclong=(
    "Enterprise distributed vpn server. Documentation and more information"
    "can be found at pritunl.com"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="all"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/${pkgname}/${pkgname}"
depends:pacman=(
    "python2"
    "net-tools"
    "iproute2"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
)
depends:yum=(
    "python2"
    "net-tools"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
)
depends:apt=(
    "python"
    "net-tools"
    "openvpn"
    "openssl"
    "bridge-utils"
    "ca-certificates"
)
makedepends:pacman=(
    "gcc"
    "python2-setuptools"
    "python2-virtualenv"
    "python2-cryptography"
    "openssl"
    "libffi"
)
makedepends:yum=(
    "gcc"
    "python-setuptools"
    "python-virtualenv"
    "openssl-devel"
    "libffi-devel"
)
makedepends:apt=(
    "gcc"
    "python-dev"
    "python-setuptools"
    "python-virtualenv"
    "libssl-dev"
    "libffi-dev"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "a4a8e23c3f49289d498a4a4745df7ba34ce860b31d59686c35aa329629b6da3a"
)
backup=(
    "etc/${pkgname}.conf"
    "var/log/${pkgname}.log"
    "var/log/${pkgname}.log.1"
)

build:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
    virtualenv2 /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-web
}
build:yum() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-web
}
build:apt() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-web
}

package:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python2 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web
}
package:yum() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python2 setup.py install --root="${pkgdir}"
    rm -r ${pkgdir}/etc/init.d
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web
}
package:debian() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}"
    rm -r ${pkgdir}/etc/init
    rm -r ${pkgdir}/etc/init.d
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web
}
package:debian-wheezy() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}" --sysvinit
    chmod +x ${pkgdir}/etc/init.d/pritunl
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web
}
