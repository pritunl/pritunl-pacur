targets=(
    "archlinux"
    "almalinux-8"
    "almalinux-9"
    "amazonlinux-2"
    "amazonlinux-2023"
    "debian-bullseye"
    "debian-bookworm"
    "debian-trixie"
    "oraclelinux-7"
    "oraclelinux-8"
    "oraclelinux-9"
    "ubuntu-bionic"
    "ubuntu-focal"
    "ubuntu-jammy"
    "ubuntu-noble"
)
pkgname="pritunl"
pkgver="1.32.4400.99"
pkgrel="1"
pkgdesc="Enterprise VPN Server"
pkgdesclong=(
    "Enterprise distributed vpn server. Documentation and more information"
    "can be found at pritunl.com"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="amd64"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/${pkgname}/${pkgname}"
rpmopts=(
    "%global __requires_exclude_from ^/usr/lib/pritunl/.*$"
    "AutoReqProv: no"
)
depends:pacman=(
    "pritunl-ndppd"
    "python"
    "net-tools"
    "iproute2"
    "openvpn"
    "openssl"
    "iptables"
    "ipset"
    "ca-certificates"
    "psmisc"
)
depends:yum=(
    "pritunl-ndppd"
    "python3"
    "net-tools"
    "openvpn"
    "openssl"
    "iptables"
    "ipset"
    "ca-certificates"
    "psmisc"
)
depends:apt=(
    "pritunl-ndppd"
    "python3"
    "net-tools"
    "openvpn"
    "openssl"
    "iptables"
    "ipset"
    "ca-certificates"
    "psmisc"
)
makedepends:pacman=(
    "python3"
    "net-tools"
    "iproute2"
    "openvpn"
    "openssl"
    "iptables"
    "ipset"
    "ca-certificates"
    "psmisc"
    "gcc"
    "python-setuptools"
    "python-virtualenv"
    "openssl"
    "libffi"
)
makedepends:yum=(
    "gcc"
    "gcc-c++"
    "python3-devel"
    "python3-setuptools"
    "python3-virtualenv"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python"
)
makedepends:amazonlinux-2=(
    "gcc"
    "gcc-c++"
    "python3-devel"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python"
)
makedepends:amazonlinux-2023=(
    "gcc"
    "gcc-c++"
    "python3-devel"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
)
makedepends:almalinux-8=(
    "gcc"
    "gcc-c++"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python-utils"
)
makedepends:almalinux-9=(
    "gcc"
    "gcc-c++"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python-utils"
)
makedepends:oraclelinux-7=(
    "gcc"
    "gcc-c++"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python"
)
makedepends:oraclelinux-8=(
    "gcc"
    "gcc-c++"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python-utils"
)
makedepends:oraclelinux-9=(
    "gcc"
    "gcc-c++"
    "rsync"
    "openssl-devel"
    "bzip2-devel"
    "libffi-devel"
    "sqlite-devel"
    "xz-devel"
    "zlib-devel"
    "selinux-policy"
    "selinux-policy-devel"
    "policycoreutils-python-utils"
)
makedepends:apt=(
    "gcc"
    "g++"
    "rsync"
    "libssl-dev"
    "libbz2-dev"
    "libsqlite3-dev"
    "libffi-dev"
    "zlib1g-dev"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/refs/tags/${pkgver}.tar.gz"
    "cacert.pem"
    "cacert2.pem"
    "https://www.python.org/ftp/python/3.9.23/Python-3.9.23.tar.xz"
)
hashsums=(
    "806e5d7c22880195652e5224fc7c381c4ace38ae7e09c27b8efbd9dbabe45f76"
    "f524fc21859b776e18df01a87880efa198112214e13494275dbcbd9bcb71d976"
    "2c11c3ce08ffc40d390319c72bc10d4f908e9c634494d65ed2cbc550731fd524"
    "61a42919e13d539f7673cf11d1c404380e28e540510860b9d242196e165709c9"
)
backup=(
    "etc/${pkgname}.conf"
    "var/log/${pkgname}.log"
    "var/log/${pkgname}.log.1"
)

build:pacman() {
    tee -a /etc/pacman.conf << EOF
    [pritunl]
    Server = https://repo.pritunl.com/stable/pacman
EOF
    pacman-key --init
    pacman-key --keyserver hkp://keyserver.ubuntu.com -r 7568D9BB55FF9E5287D586017AE645C0CF8E292A
    pacman-key --lsign-key 7568D9BB55FF9E5287D586017AE645C0CF8E292A
    pacman -Sy
    pacman -S --noconfirm pritunl-ndppd

    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest
}
build:almalinux-8() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest

    cd "selinux8"
    ln -s /usr/share/selinux/devel/Makefile
    sed -i "s/1.0.0/${pkgver}/" pritunl.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_dns.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_web.te
    make
}
build:almalinux-9() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest

    cd "selinux9"
    ln -s /usr/share/selinux/devel/Makefile
    sed -i "s/1.0.0/${pkgver}/" pritunl.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_dns.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_web.te
    make
}
build:amazonlinux-2() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest
}
build:amazonlinux-2023() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest
}
build:oraclelinux-7() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest

    cd "selinux"
    ln -s /usr/share/selinux/devel/Makefile
    sed -i "s/1.0.0/${pkgver}/" pritunl.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_dns.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_web.te
    make
}
build:oraclelinux-8() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest

    cd "selinux8"
    ln -s /usr/share/selinux/devel/Makefile
    sed -i "s/1.0.0/${pkgver}/" pritunl.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_dns.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_web.te
    make
}
build:oraclelinux-9() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest

    cd "selinux9"
    ln -s /usr/share/selinux/devel/Makefile
    sed -i "s/1.0.0/${pkgver}/" pritunl.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_dns.te
    sed -i "s/1.0.0/${pkgver}/" pritunl_web.te
    make
}
build:apt() {
    cd "${srcdir}/Python-3.9.23"
    gcc_major=$(gcc -dumpversion | cut -d. -f1)
    base_cflags="-fstack-protector-strong -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -Werror=format-security -mtune=generic -grecord-gcc-switches"
    if [ "$gcc_major" -ge 7 ]; then
        gcc7_flags="-fno-semantic-interposition"
        cflags="$base_cflags $gcc7_flags"
        ldflags="-fno-semantic-interposition"
    else
        cflags="$base_cflags"
        ldflags=""
    fi
    if [ "$gcc_major" -ge 8 ]; then
        gcc8_flags="-fstack-clash-protection -fcf-protection"
        cflags="$cflags $gcc8_flags"
    fi
    if [ "$gcc_major" -ge 11 ]; then
        arch_flags="-march=x86-64-v2"
        cflags="$cflags $arch_flags"
    fi
    export CFLAGS_NODIST="$cflags"
    export LDFLAGS_NODIST="$ldflags"

    echo "####################################################################"
    echo "CFLAGS_NODIST: $CFLAGS_NODIST"
    echo "LDFLAGS_NODIST: $LDFLAGS_NODIST"
    echo "####################################################################"

    ./configure --prefix=/usr --libdir=/usr/lib --enable-optimizations --enable-ipv6 --enable-loadable-sqlite-extensions --disable-shared --with-lto --with-computed-gotos=yes --with-platlibdir=lib
    make DESTDIR=/usr/lib/${pkgname} install
    /usr/lib/${pkgname}/usr/bin/python3 -m ensurepip
    /usr/lib/${pkgname}/usr/bin/python3 -m pip install pip==23.3.2

    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i "s/’/'/" LICENSE
    /usr/lib/${pkgname}/usr/bin/pip3 install --require-hashes -r requirements.txt
    /usr/lib/${pkgname}/usr/bin/python3 setup.py build
    go install github.com/pritunl/pritunl-dns@latest
    go install github.com/pritunl/pritunl-web@latest
}

package:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:almalinux-8() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    PYTHONHOME=/usr/lib/pritunl/usr /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p "${pkgdir}/usr/share/selinux/packages"
    cd "selinux8"
    cp pritunl.pp ${pkgdir}/usr/share/selinux/packages/pritunl.pp
    cp pritunl_dns.pp ${pkgdir}/usr/share/selinux/packages/pritunl_dns.pp
    cp pritunl_web.pp ${pkgdir}/usr/share/selinux/packages/pritunl_web.pp

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:almalinux-9() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    PYTHONHOME=/usr/lib/pritunl/usr /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p "${pkgdir}/usr/share/selinux/packages"
    cd "selinux9"
    cp pritunl.pp ${pkgdir}/usr/share/selinux/packages/pritunl.pp
    cp pritunl_dns.pp ${pkgdir}/usr/share/selinux/packages/pritunl_dns.pp
    cp pritunl_web.pp ${pkgdir}/usr/share/selinux/packages/pritunl_web.pp

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:amazonlinux-2() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:amazonlinux-2023() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:oraclelinux-7() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p "${pkgdir}/usr/share/selinux/packages"
    cd "selinux"
    cp pritunl.pp ${pkgdir}/usr/share/selinux/packages/pritunl.pp
    cp pritunl_dns.pp ${pkgdir}/usr/share/selinux/packages/pritunl_dns.pp
    cp pritunl_web.pp ${pkgdir}/usr/share/selinux/packages/pritunl_web.pp

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:oraclelinux-8() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p "${pkgdir}/usr/share/selinux/packages"
    cd "selinux8"
    cp pritunl.pp ${pkgdir}/usr/share/selinux/packages/pritunl.pp
    cp pritunl_dns.pp ${pkgdir}/usr/share/selinux/packages/pritunl_dns.pp
    cp pritunl_web.pp ${pkgdir}/usr/share/selinux/packages/pritunl_web.pp

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:oraclelinux-9() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p "${pkgdir}/usr/share/selinux/packages"
    cd "selinux9"
    cp pritunl.pp ${pkgdir}/usr/share/selinux/packages/pritunl.pp
    cp pritunl_dns.pp ${pkgdir}/usr/share/selinux/packages/pritunl_dns.pp
    cp pritunl_web.pp ${pkgdir}/usr/share/selinux/packages/pritunl_web.pp

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    find /usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
    find ${pkgdir}/usr/lib/${pkgname} -type f -exec sed -i 's|#![[:blank:]]*/usr/bin/env[[:blank:]]*python$|#!/usr/bin/env python3|g' {} +
}
package:apt() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/usr/bin/python3 setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    rsync --archive /usr/lib/${pkgname}/ ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-web ${pkgdir}/usr/bin/${pkgname}-web

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi
    cp ${srcdir}/cacert.pem ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/certifi/cacert.pem
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/certifi
    cp ${srcdir}/cacert2.pem ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/certifi/cacert.pem

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib/python3.10/site-packages/googleapiclient/discovery_cache/documents/

    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python2.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.6/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.7/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.8/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.9/site-packages/googleapiclient/discovery_cache/documents/
    mkdir -p ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
    ln -s /usr/lib/pritunl/usr/lib/python3.9/site-packages/googleapiclient/discovery_cache/documents/* ${pkgdir}/usr/lib/pritunl/lib64/python3.10/site-packages/googleapiclient/discovery_cache/documents/
}

preinst() {
  rm -rf /usr/lib/pritunl || true
}

postinst() {
    if hash systemctl 2> /dev/null; then
        systemctl daemon-reload 2> /dev/null || true
    fi
    if hash initctl 2> /dev/null; then
        initctl reload-configuration 2> /dev/null || true
    fi

    useradd -r -s /sbin/nologin -c 'Pritunl web server' pritunl-web &> /dev/null || true
    systemctl try-restart pritunl-web 2> /dev/null || true
}

postinst:yum() {
    if hash systemctl 2> /dev/null; then
        systemctl daemon-reload 2> /dev/null || true
    fi
    if hash initctl 2> /dev/null; then
        initctl reload-configuration 2> /dev/null || true
    fi
    semodule -i /usr/share/selinux/packages/pritunl.pp /usr/share/selinux/packages/pritunl_dns.pp /usr/share/selinux/packages/pritunl_web.pp || true
    restorecon -v -R /tmp/pritunl* &> /dev/null || true
    restorecon -v -R /run/pritunl* &> /dev/null || true
    restorecon -v /etc/systemd/system/pritunl.service &> /dev/null || true
    restorecon -v /usr/lib/systemd/system/pritunl.service &> /dev/null || true
    restorecon -v /etc/systemd/system/pritunl-web.service &> /dev/null || true
    restorecon -v /usr/lib/systemd/system/pritunl-web.service &> /dev/null || true
    restorecon -v /usr/lib/pritunl/usr/bin/pritunl || true
    restorecon -v /usr/lib/pritunl/usr/bin/python3 || true
    restorecon -v /usr/lib/pritunl/usr/bin/python3.6 &> /dev/null || true
    restorecon -v /usr/lib/pritunl/usr/bin/python3.9 &> /dev/null || true
    restorecon -v /usr/bin/pritunl-web || true
    restorecon -v /usr/bin/pritunl-dns || true
    restorecon -v -R /var/lib/pritunl &> /dev/null || true
    restorecon -v /var/log/pritunl* &> /dev/null || true

    useradd -r -s /sbin/nologin -c 'Pritunl web server' pritunl-web &> /dev/null || true
}

postrm:yum() {
    if hash systemctl 2> /dev/null; then
        systemctl daemon-reload 2> /dev/null || true
    fi
    if hash initctl 2> /dev/null; then
        initctl reload-configuration 2> /dev/null || true
    fi
}
